@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
}

<style>
	body {
		background-color: #dcdcdc; /* Set the background color */
	}
	/* Style for centered icon */
	.centered-icon {
		text-align: center;
		margin-bottom: 20px; /* Adjust as needed */
	}

		.centered-icon img {
			max-width: 200px; /* Adjust the max-width as needed */
			max-height: 200px; /* Adjust the max-height as needed */
		}

	/* Custom CSS for centering the content vertically */
	.centered-container {
		margin-top: 100px; /* Adjust this value as needed */
	}

	/* This sets the hover element for the register link*/
	p:hover {
		background-color: #dcdcdc;
	}
</style>


<div class="container">
	<div class="centered-icon">
		<img src="~/Logo/Hent_Logo.png" alt="Hennovative Technologies Logo">

		<div class="row justify-content-center centered-container">
			<div class="col-md-6">
				<div class="card p-4 shadow rounded">
					<form id="account" method="post">
						<h2 style="centered"> Sign into Henovative AI.</h2>
						<hr />
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
							<label asp-for="Input.Email" class="form-label">Email</label>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
							<label asp-for="Input.Password" class="form-label">Password</label>
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="checkbox mb-3">
							<label asp-for="Input.RememberMe" class="form-label">
								<input class="form-check-input" asp-for="Input.RememberMe" />
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
						<div>
							<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
						</div>
						<div>
							<p class="hover" >
								<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: none;">Register as a new user</a>
								
							</p>				
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-6 col-md-offset-2">
			<section>
			</section>
		</div>
	</div>

	